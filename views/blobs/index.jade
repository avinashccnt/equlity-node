extends ../layout

block content
    h1.
        #{title}
    ul
        - each blob, i in blobs
         li
            = blob.name
            = blob.badge
            = blob.dob
            = blob.isloved
            = blob._id
            form(action='/data/#{blob._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                input(type='hidden',value='DELETE',name='_method')
                button(type='submit').Delete
            p
                a(href='/data/#{blob._id}/edit') Edit
            p
                a(href='/data/#{blob._id}') Show
